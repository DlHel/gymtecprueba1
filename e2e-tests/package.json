{
  "name": "gymtec-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end testing suite for Gymtec ERP using Playwright + MCP",
  "main": "index.js",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:codegen": "playwright codegen http://localhost:8080",
    "test:e2e:record": "playwright codegen --target javascript --output-dir tests/recorded",
    "test:monitoring": "playwright test tests/frontend-monitoring.spec.js",
    "test:monitoring:critical": "playwright test --grep @monitoring",
    "test:errors-only": "playwright test tests/frontend-monitoring.spec.js --grep 'should detect and report all frontend issues'",
    "monitor:frontend": "playwright test tests/frontend-monitoring.spec.js --reporter=list",
    "monitor:performance": "playwright test tests/frontend-monitoring.spec.js --grep @performance",
    "test:setup": "node utils/test-setup.js",
    "test:cleanup": "node utils/test-cleanup.js",
    "test:all": "npm run test:setup && npm run test:e2e && npm run test:cleanup"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "mcp",
    "gymtec",
    "erp"
  ],
  "author": "Gymtec Development Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "playwright": "^1.46.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mysql2": "^3.14.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
