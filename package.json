{
  "name": "gymtec-erp",
  "version": "1.0.0",
  "description": "Sistema ERP profesional de gesti√≥n de mantenimiento de equipos de gimnasio",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "http-server ./frontend -p 8080",
    "dev": "npm run build:css",
    "build:css": "tailwindcss -i ./frontend/css/input.css -o ./frontend/css/style.css --watch",
    "setup:mysql": "cd backend && npm run setup-mysql",
    "test:api": "cd backend && npm run test-endpoints",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:backend": "cd backend && npm test",
    "test:e2e": "cd e2e-tests && npm run test:e2e",
    "test:e2e:headed": "cd e2e-tests && npm run test:e2e:headed",
    "test:e2e:debug": "cd e2e-tests && npm run test:e2e:debug",
    "test:e2e:smoke": "cd e2e-tests && npm run test:e2e:smoke",
    "test:e2e:install": "cd e2e-tests && npm run test:e2e:install",
    "monitor:frontend": "cd e2e-tests && npm run monitor:frontend",
    "monitor:errors": "cd e2e-tests && npm run test:errors-only",
    "monitor:performance": "cd e2e-tests && npm run monitor:performance",
    "test:all": "npm run test:unit && npm run test:e2e:smoke",
    "test:full": "npm run test:unit && npm run test:e2e",
    "postinstall": "cd backend && npm install && cd ../e2e-tests && npm install",
    "clean": "npm run clean:node_modules && npm run clean:logs",
    "clean:node_modules": "rmdir /s /q node_modules && rmdir /s /q backend\\node_modules && rmdir /s /q frontend\\node_modules && rmdir /s /q e2e-tests\\node_modules",
    "clean:logs": "del /q logs\\*.log backend\\logs\\*.log"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-jest": "^30.1.2",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "tailwindcss": "^4.1.13"
  },
  "keywords": [
    "erp",
    "gym",
    "maintenance",
    "equipment",
    "management",
    "mysql",
    "vanilla-js"
  ],
  "author": "Gymtec Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DlHel/gymtecprueba1.git"
  },
  "bugs": {
    "url": "https://github.com/DlHel/gymtecprueba1/issues"
  },
  "homepage": "https://github.com/DlHel/gymtecprueba1#readme",
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
