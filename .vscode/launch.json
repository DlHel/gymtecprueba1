{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Debug Backend Server (Enhanced)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/server.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "gymtec:*",
        "LOG_LEVEL": "debug",
        "ENABLE_DEBUG_ROUTES": "true",
        "PERFORMANCE_MONITORING": "true"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--inspect=9229"],
      "envFile": "${workspaceFolder}/backend/config.env",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "outputCapture": "std",
      "autoAttachChildProcesses": true
    },
    {
      "name": "üîß Debug API Only",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/server.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "gymtec:api",
        "LOG_LEVEL": "info"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--inspect=9230"],
      "envFile": "${workspaceFolder}/backend/config.env",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "üåê Debug Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/frontend",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceFolder}/frontend/node_modules/*",
        "webpack:///./*": "${workspaceFolder}/frontend/*",
        "webpack:///src/*": "${workspaceFolder}/frontend/*"
      }
    },
    {
      "name": "üß™ Debug Test Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/test-mysql-connection.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "gymtec:test"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/backend/config.env",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "üóÑÔ∏è Debug Database Setup",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/database/setup-mysql.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "gymtec:db"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/backend/config.env",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "üìä Debug Data Seeding",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/seed-initial-data.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "gymtec:seed"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/backend/config.env",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "üîó Attach to Running Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "üéØ Debug Full Stack",
      "configurations": [
        "üöÄ Debug Backend Server (Enhanced)",
        "üåê Debug Frontend (Chrome)"
      ],
      "stopAll": true
    }
  ]
}
